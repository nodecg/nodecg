{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"rootDir": ".",
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"lib": ["ESNext", "DOM"],

		"noEmit": true,

		"noUncheckedIndexedAccess": false,
		"noPropertyAccessFromIndexSignature": false
	},
	"include": ["./**/*.ts"],
	"references": [
		{ "path": "../src/types" },
		{ "path": "../src/shared" },
		{ "path": "../src/server" },
		{ "path": "../src/client" }
	]
}
