doctype html
html(lang="en")
	head
		meta(http-equiv="X-UA-Compatible", content="IE=edge; charset=UTF-8")
		meta(name="viewport", content="width=device-width", initial-scale=1)

		title NodeCG login

		link(rel='import', href='/bower_components/paper-styles/typography.html')

		style(is='custom-style' include='iron-flex iron-flex-alignment').
			body {
				display: flex;
				flex-direction: column;
				align-items: center;
				padding: 40px;
				background-color: #eee;
			}

			h2 {
				@apply(--paper-font-headline);
			}

			label {
				display: block;
				}

			button {
				margin-top:2px;
			}

	body
		h2 Please sign in

		if config.login.steam && config.login.steam.enabled
			a(href='/login/steam')
				img(src='/login/signin_steam.png')

		if config.login.twitch && config.login.twitch.enabled
			a(href='/login/twitch')
				img(src='/login/signin_twitch.png')

		if config.login.local && config.login.local.enabled
			form#localForm(method='POST' action='/login/local')
				div.form-group
					label(for='username') Username:
					input#username.form-control(type='text' name='username')
				div.form-group
					label(for='password') Password:
					input#password.form-control(type='password' name='password')
				button#localSubmit.btn.btn-primary(type='submit') Login
