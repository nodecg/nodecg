doctype html
html(lang="en")
    head
        meta(http-equiv="X-UA-Compatible", content="IE=edge; charset=UTF-8")
        meta(name="viewport", content="width=device-width", initial-scale=1)

        title NodeCG login

        //Bootstrap main CSS & Yeti override
        link(rel='stylesheet', href='/components/bootstrap/dist/css/bootstrap.min.css')
        link(rel='stylesheet', href='/components/bsw-yeti/css/bootstrap.min.css')

        //Custom styles for this template
        link(rel='stylesheet', href='/login/login.css')

    body
        div.container
            form(class='form-signin', role='form')
                h2.form-signin-heading Please sign in
                if user !== undefined && !user.allowed
                    div(class='alert alert-danger')
                        strong Access denied!
                        br
                        | Your account is not in the whitelist
                if config.login.steam.enabled
                    a(href='/login/steam')
                        img(src='/login/signin_steam.png')
                if config.login.twitch.enabled
                    a(href='/login/twitch')
                        img(src='/login/signin_twitch.png')
