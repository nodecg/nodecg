{
	"root": true,
	"extends": "xo/esnext",
	"env": {
		"node": false,
		"browser": true
	},
	"globals": {
		"Polymer": true,
		"NodeCG": true,
		"Clipboard": true,
		"Packery": true,
		"Draggabilly": true
	},
	"rules": {
		"new-cap": [
			2,
			{
				"capIsNewExceptions": [
					"Polymer",
					"nodecg.Replicant",
					"NodeCG.Replicant"
				]
			}
		]
	}
}
