    "@types/socket.io-client": "^1.4.32",
    "@types/soundjs": "^0.6.27",
    "body-parser": "^1.18.2",
    "cheerio": "^1.0.0-rc.2",
    "chokidar": "^1.7.0",
    "clone": "^2.1.1",
    "compression": "^1.7.1",
    "convict": "^4.0.2",
    "cookie-parser": "^1.4.3",
    "deep-equal": "^1.0.1",
    "express": "^4.16.2",
    "express-nedb-session": "^0.1.1",
    "express-session": "^1.15.6",
    "extend": "^3.0.1",
    "fast-memoize": "^2.5.1",
    "fs.extra": "^1.3.2",
    "git-rev-sync": "^1.9.1",
    "httpolyglot": "^0.1.2",
    "is-error": "^2.2.1",
    "is-my-json-valid": "^2.16.1",
    "json-ptr": "^1.0.1",
    "json-schema-defaults": "^0.3.0",
    "json-schema-lib": "github:Lange/json-schema-lib#ac59fe29fad5c54647e4c483c7255a923cc430dd",
    "lodash.debounce": "^4.0.8",
    "lodash.template": "^4.4.0",
    "make-fetch-happen": "^4.0.1",
    "minimist": "^1.2.0",
    "multer": "^1.3.0",
    "nedb": "^1.8.0",
    "node-localstorage": "^1.3.1",
    "object-path": "^0.11.4",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "passport-steam": "^1.0.10",
    "passport-twitch-helix": "^1.1.0",
    "raven": "^2.2.1",
    "semver": "^5.4.1",
    "serialize-error": "^2.1.0",
    "sha1": "^1.1.1",
    "sha1-file": "^1.0.0",
    "socket.io": "^2.1.0",
    "tv4": "^1.3.0",
    "uuid": "^3.1.0",
    "winston": "^2.4.0"
  },
  "scripts": {
    "start": "node index.js",
    "pretest": "npm run build && npm run instrument",
    "test": "npm run typetest && nyc --reporter=none ava --timeout=2m test && nyc report --reporter=html --reporter=text",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "static": "eslint index.js lib src test",
    "build": "npm run static && npm run docs:build && gulp",
    "instrument": "nyc instrument ./src ./instrumented",
    "postinstrument": "node test/helpers/retarget-browser-coverage.js",
    "docs": "npm run docs:build && npm run docs:publish",
    "docs:build": "rimraf docs && jsdoc -c .jsdoc.json && node scripts/readme-toc.js",
    "docs:publish": "npm run docs:build && echo nodecg.com >> docs/CNAME && gh-pages -d docs -s \"**\"",
    "prerelease": "npm t",
    "release": "standard-version",
    "postrelease": "npm publish && git push --follow-tags && npm run docs:publish",
    "typetest": "cd typetest/fake-bundle && npm i && npm run build"
  },
  "nyc": {
    "include": [
      "lib/**",
      "src/**",
      "index.js"
    ],
    "exclude": [
      "index.js",
      "lib/login/public/QueryString.js",
      "src/service-worker.js",
      "instrumented/**"
    ],
    "all": true
  },
  "engines": {
    "node": ">=8.3.0"
  },
  "files": [
    "build",
    "bundles",
    "db",
    "lib",
    "schemas",
    "src",
    "types",
    "AUTHORS",
    "bower.json",
    "package-lock.json"
  ],
  "pkg": {
    "assets": [
      "bower_components/**/*",
      "src/**/*",
      "build/**/*",
      "bundles/**/*",
      "schemas/**/*"
    ]
  },
  "devDependencies": {
    "aliasify": "^2.1.0",
    "ava": "^0.25.0",
    "axios": "^0.18.0",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-es2015-nostrict": "^6.6.2",
    "babel-preset-minify": "^0.2.0",
    "babelify": "^8.0.0",
    "brfs": "^2.0.0",
    "browserify": "^14.5.0",
    "del": "^3.0.0",
    "eslint": "^4.10.0",
    "eslint-config-xo": "^0.19.0",
    "eslint-plugin-ava": "^4.2.2",
    "exorcist": "^1.0.0",
    "fs-extra": "^5.0.0",
    "gh-pages": "^1.2.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^7.0.0",
    "gulp-clean-css": "^3.9.0",
    "gulp-htmlmin": "^4.0.0",
    "gulp-if": "^2.0.2",
    "gulp-imagemin": "^4.0.0",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-util": "^3.0.8",
    "is-windows": "^1.0.1",
    "jsdoc": "^3.5.5",
    "merge-stream": "^1.0.1",
    "minami": "github:nodecg/minami#a674ded7782ed7c60e8d5c1638aace339cbdbb4c",
    "nyc": "^13.0.0",
    "p-retry": "^2.0.0",
    "polymer-build": "^3.0.4",
    "puppeteer": "^1.9.0",
    "remark": "^8.0.0",
    "remark-toc": "^5.0.0",
    "replace-in-file": "^3.4.0",
    "rimraf": "^2.6.2",
    "simple-git": "^1.96.0",
    "sinon": "^4.1.2",
    "socket.io-client": "^2.1.1",
    "standard-version": "^4.4.0",
    "taffydb": "^2.7.3",
    "temp": "^0.8.3",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "vinyl-transform": "^1.0.0",
    "wdio-webcomponents": "^1.1.0"
  }
}
