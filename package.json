{
  "name": "nodecg",
  "description": "Dynamic broadcast graphics rendered in a browser",
  "main": "index.js",
  "bin": "index.js",
  "version": "1.2.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/nodecg/nodecg.git"
  },
  "bugs": "https://github.com/nodecg/nodecg/issues",
  "homepage": "http://nodecg.com/",
  "license": "MIT",
  "keywords": [
    "graphics",
    "nodecg",
    "node",
    "dynamic",
    "broadcast"
  ],
  "dependencies": {
    "@types/express": "^4.16.0",
