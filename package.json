{
  "name": "nodecg-monorepo",
  "version": "2.6.1",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/nodecg/nodecg.git"
  },
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "workspaces/internal-util",
    "workspaces/database-adapter-types",
    "workspaces/database-adapter-sqlite-legacy",
    "workspaces/cli",
    "workspaces/nodecg"
  ],
  "scripts": {
    "start": "node index.js",
    "dev": "run-p watch typecheck-watch",
    "watch": "tsdown --watch --no-clean",
    "typecheck-watch": "npm run typecheck -- --watch --preserveWatchOutput",
    "build": "tsdown",
    "typecheck": "tsc -b workspaces/cli workspaces/database-adapter-types workspaces/database-adapter-sqlite-legacy workspaces/internal-util workspaces/nodecg/src workspaces/nodecg/test --noEmit",
    "test": "vitest",
    "typetest": "npm -w nodecg run typetest",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint",
    "lint:prettier": "prettier --check .",
    "fix": "run-s fix:*",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "prettier --write ."
  },
  "prettier": {},
  "devDependencies": {
    "@effect/cli": "^0.72.1",
    "@effect/language-service": "^0.55.5",
    "@effect/platform": "^0.93.0",
    "@effect/platform-node": "^0.100.0",
    "@eslint/js": "^9.39.0",
    "@vitest/coverage-v8": "^4.0.12",
    "effect": "^3.19.3",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jiti": "^2.6.1",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.4.2",
    "tsdown": "^0.16.6",
    "tsx": "^4.19.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.2",
    "vitest": "^4.0.12"
  },
  "packageManager": "npm@11.6.2+sha512.ee22b335fcbc95662cdf3ab8a053daf045d9cf9c6df6040d28965abb707512b2c16fa6c5eec049d34c74f78f390cebd14f697919eadb97756564d4f9eccc4954",
  "nodecgRoot": true
}
