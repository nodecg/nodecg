  "scripts": {
    "start": "node index.js",
    "pretest": "npm run build && npm run instrument",
    "test": "npm run typetest && nyc --reporter=none ava --config ava.config.js && nyc report --reporter=html --reporter=text",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "npm-run-all -s lint:*",
    "lint:prettier": "prettier --list-different \"**/*.{json,md,yml,ts,tsx,js,jsx}\"",
    "lint:eslint": "eslint index.js lib src test",
    "fix": "npm-run-all -s fix:*",
    "fix:prettier": "prettier --write \"**/*.{json,md,yml,ts,tsx,js,jsx}\"",
    "fix:eslint": "npm run lint:eslint -- --fix ",
    "build": "npm run lint && gulp",
    "instrument": "nyc instrument ./src ./instrumented",
    "postinstrument": "node test/helpers/retarget-browser-coverage.js",
    "prerelease": "npm t",
    "release": "standard-version",
    "postrelease": "npm publish && git push --follow-tags",
    "typetest": "cd typetest/fake-bundle && npm i && npm run build"
  },
  "nyc": {
    "include": [
      "lib/**",
      "src/**",
      "index.js"
    ],
    "exclude": [
      "index.js",
      "lib/login/public/QueryString.js",
      "src/service-worker.js",
      "instrumented/**"
    ],
    "all": true
  },
  "engines": {
    "node": ">=8.3.0"
  },
  "files": [
    "build",
    "bundles/.empty_directory",
    "db/.empty_directory",
    "lib",
    "schemas",
    "src",
    "types",
    "AUTHORS",
    "package-lock.json"
  ],
  "pkg": {
    "assets": [
      "src/**/*",
      "build/**/*",
      "bundles/**/*",
      "schemas/**/*",
      "node_modules/babel-plugin-bare-import-rewrite/**"
    ]
  },
