{
  "name": "nodecg-monorepo",
  "version": "2.6.1",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/nodecg/nodecg.git"
  },
  "license": "MIT",
  "workspaces": [
    "workspaces/internal-util",
    "workspaces/database-adapter-types",
    "workspaces/database-adapter-sqlite-legacy",
    "workspaces/cli",
    "workspaces/nodecg"
  ],
  "scripts": {
    "start": "node index.js",
    "dev": "run-p dev:*",
    "dev:watch": "tsx scripts/workspaces-parallel.ts watch",
    "dev:tsc": "npm run build:tsc -- --watch --preserveWatchOutput",
    "test": "vitest",
    "typetest": "npm -w nodecg run typetest",
    "lint": "npm-run-all -s lint:*",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint --cache",
    "fix": "npm-run-all -s fix:*",
    "fix:prettier": "prettier --write .",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "build": "run-s build:*",
    "build:tsc": "tsc -b workspaces/cli workspaces/nodecg/src/client workspaces/nodecg/src/server",
    "build:workspaces": "npm --workspaces --if-present run build"
  },
  "prettier": {},
  "devDependencies": {
    "@effect/cli": "^0.72.1",
    "@effect/platform": "^0.93.0",
    "@effect/platform-node": "^0.100.0",
    "@eslint/js": "^9.39.0",
    "@vitest/coverage-v8": "^4.0.7",
    "cpy-cli": "^5.0.0",
    "del-cli": "^5.1.0",
    "effect": "^3.19.3",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jiti": "^2.6.1",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.4.2",
    "puppeteer": "^24.28.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.2",
    "vitest": "^4.0.7"
  },
  "packageManager": "npm@11.6.2+sha512.ee22b335fcbc95662cdf3ab8a053daf045d9cf9c6df6040d28965abb707512b2c16fa6c5eec049d34c74f78f390cebd14f697919eadb97756564d4f9eccc4954",
  "nodecgRoot": true
}
